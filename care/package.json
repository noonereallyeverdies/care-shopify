{
  "name": "demo-store",
  "private": true,
  "sideEffects": false,
  "version": "2.1.6",
  "type": "module",
  "scripts": {
    "dev": "shopify hydrogen dev --codegen",
    "dev:analytics": "shopify hydrogen dev --codegen && echo 'Analytics test suite available at http://localhost:3000/analytics-test-suite.js'",
    "build": "shopify hydrogen build --codegen",
    "build:analyze": "npm run build && echo '\n📊 Bundle analysis written to bundle-analysis.txt'",
    "build:analytics": "npm run build && echo '\n📊 Analytics optimizations applied with Partytown'",
    "preview": "npm run build && shopify hydrogen preview",
    "dev:debug": "NODE_OPTIONS=\"--inspect\" shopify hydrogen dev --codegen",
    "validate:env": "node scripts/validate-env.cjs",
    "validate:env:production": "NODE_ENV=production node scripts/validate-env.cjs",
    "setup:env": "cp .env.example .env && echo '📝 Created .env file from .env.example. Please fill in your values.'",
    "setup:env:interactive": "./scripts/setup-env.sh",
    "test:analytics": "node -e \"console.log('🧪 Analytics Test Suite Instructions:\\n1. Start dev server: npm run dev\\n2. Open browser console\\n3. Run: analyticsTestSuite.runAll()\\n4. Check console for results')\"",
    "e2e": "npx playwright test",
    "e2e:ui": "npx playwright test --ui",
    "lint": "eslint --no-error-on-unmatched-pattern --ext .js,.ts,.jsx,.tsx .",
    "format": "prettier --write --ignore-unknown .",
    "format:check": "prettier --check --ignore-unknown .",
    "typecheck": "tsc --noEmit",
    "bundle:stats": "npm run build && du -sh dist/* && echo '\n🔍 Check bundle-analysis.txt for detailed breakdown'",
    "bundle:check": "bundlesize",
    "bundle:analyze": "npm run build && node -e \"require('./app/lib/bundle-monitor.ts').runBundleAnalysis()\"",
    "performance:ci": "./scripts/performance-ci.sh",
    "performance:lighthouse": "lhci autorun",
    "performance:budget": "node -e \"require('./app/lib/performance-budgets.ts')\"",
    "performance:monitor": "node scripts/test-web-vitals.js",
    "analytics:debug": "echo 'Analytics Debugging Mode:\\n1. Check DevTools Network tab for analytics requests\\n2. Look for Partytown worker in Application tab\\n3. Monitor console for analytics events'",
    "analyze": "ANALYZE=true npm run build"
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": "@shopify/prettier-config",
  "dependencies": {
    "@builder.io/partytown": "^0.10.3",
    "@headlessui/react": "^1.7.2",
    "@motionone/dom": "^10.18.0",
    "@next/bundle-analyzer": "^13.4.19",
    "@remix-run/node": "^2.16.1",
    "@remix-run/react": "^2.16.6",
    "@remix-run/server-runtime": "^2.16.6",
    "@shopify/cli": "^3.79.1",
    "@shopify/hydrogen": "^2025.1.4",
    "@shopify/remix-oxygen": "^2.0.12",
    "@shopify/storefront-api-client": "^1.0.7",
    "autoprefixer": "^10.4.21",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "cssnano": "^7.0.7",
    "framer-motion": "^12.6.3",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "isbot": "^3.8.0",
    "lucide-react": "^0.486.0",
    "react": "^18.3.1",
    "react-compare-slider": "^3.1.0",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^5.0.0",
    "react-intersection-observer": "^9.4.1",
    "react-use": "^17.4.0",
    "schema-dts": "^1.1.0",
    "simplex-noise": "^4.0.3",
    "swiper": "^11.2.6",
    "tailwind-merge": "^3.1.0",
    "tiny-invariant": "^1.2.0",
    "typographic-base": "^1.0.4",
    "web-vitals": "^3.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@playwright/test": "^1.48.2",
    "@remix-run/dev": "^2.16.6",
    "@remix-run/eslint-config": "^2.16.6",
    "@remix-run/fs-routes": "^2.16.6",
    "@remix-run/route-config": "^2.16.6",
    "@shopify/eslint-plugin": "^42.0.1",
    "@shopify/hydrogen-codegen": "^0.3.3",
    "@shopify/mini-oxygen": "^3.1.2",
    "@shopify/oxygen-workers-types": "^4.1.6",
    "@shopify/prettier-config": "^1.1.2",
    "@tailwindcss/forms": "^0.5.3",
    "@tailwindcss/typography": "^0.5.9",
    "@total-typescript/ts-reset": "^0.4.2",
    "@types/eslint": "^8.4.10",
    "@types/node": "^22.8.4",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "assert": "^2.1.0",
    "browserify-fs": "^1.0.0",
    "buffer": "^6.0.3",
    "bundlesize": "^0.18.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "eslint": "^8.20.0",
    "eslint-plugin-hydrogen": "0.12.2",
    "estree-util-value-to-estree": "^3.4.0",
    "events": "^3.3.0",
    "express": "^4.21.2",
    "lighthouse": "^12.6.0",
    "path-browserify": "^1.0.1",
    "postcss": "^8.5.3",
    "postcss-import": "^15.1.0",
    "postcss-preset-env": "^8.2.0",
    "prettier": "^2.8.4",
    "process": "^0.11.10",
    "querystring-es3": "^0.2.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.1.6",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vite": "^6.2.1",
    "vite-tsconfig-paths": "^4.3.1",
    "webpack-bundle-analyzer": "^4.9.1"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "bundlesize": [
    {
      "path": "./dist/client/build/**/*.js",
      "maxSize": "300 KB",
      "compression": "gzip"
    },
    {
      "path": "./dist/client/build/**/vendor*.js",
      "maxSize": "200 KB",
      "compression": "gzip"
    },
    {
      "path": "./dist/client/build/**/*.css",
      "maxSize": "50 KB",
      "compression": "gzip"
    },
    {
      "path": "./dist/client/assets/images/**/*",
      "maxSize": "150 KB"
    },
    {
      "path": "./dist/client/build/**/*",
      "maxSize": "1.5 MB"
    }
  ]
}
