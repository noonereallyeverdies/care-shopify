# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# SHOPIFY CONFIGURATION (Required)
# -----------------------------------------------------------------------------
PUBLIC_STORE_DOMAIN=your-production-store.myshopify.com
PUBLIC_STOREFRONT_API_TOKEN=your_production_storefront_token
PUBLIC_STOREFRONT_API_VERSION=2025-01
PUBLIC_STOREFRONT_ID=

# Optional private token for enhanced access
PRIVATE_STOREFRONT_API_TOKEN=your_production_private_token

# -----------------------------------------------------------------------------
# SESSION CONFIGURATION (Required)
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure random string for production
# Use: openssl rand -base64 32
SESSION_SECRET=your_super_secure_production_session_secret

# -----------------------------------------------------------------------------
# CUSTOMER ACCOUNTS (Optional)
# -----------------------------------------------------------------------------
PUBLIC_CUSTOMER_ACCOUNT_API_CLIENT_ID=your_customer_account_client_id
PUBLIC_CUSTOMER_ACCOUNT_API_URL=https://shopify.com/your_account_api_url
SHOP_ID=gid://shopify/Shop/YOUR_SHOP_ID

# -----------------------------------------------------------------------------
# ANALYTICS & TRACKING (Production)
# -----------------------------------------------------------------------------
GA_MEASUREMENT_ID=G-XXXXXXXXXX
GTM_CONTAINER_ID=GTM-XXXXXXX
CLARITY_PROJECT_ID=your_clarity_project_id
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# -----------------------------------------------------------------------------
# DEPLOYMENT CONFIGURATION
# -----------------------------------------------------------------------------
NODE_ENV=production
PUBLIC_CHECKOUT_DOMAIN=your-production-store.myshopify.com

# -----------------------------------------------------------------------------
# PRODUCTION FEATURES
# -----------------------------------------------------------------------------
DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_AB_TESTING=true

# Error tracking for production
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
