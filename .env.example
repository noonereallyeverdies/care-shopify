# Development Environment Configuration
# Copy this to .env.local and customize for your setup

# Server Configuration
PORT=3000
HOST=localhost

# Shopify Configuration
SHOPIFY_STORE_DOMAIN=your-shop.myshopify.com
SHOPIFY_STOREFRONT_ACCESS_TOKEN=your-storefront-access-token
SHOPIFY_ADMIN_ACCESS_TOKEN=your-admin-access-token

# Development Settings
NODE_ENV=development
VITE_NODE_ENV=development

# Memory optimization for development
NODE_OPTIONS=--max-old-space-size=4096

# Hydrogen specific settings
HYDROGEN_DEV_FIX_JSON=true

# Testing Configuration
BASE_URL=http://localhost:3000
CI=false

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# FACEBOOK_PIXEL_ID=XXXXXXXXXX

# Error Tracking (optional)
# SENTRY_DSN=your-sentry-dsn
# SENTRY_ORG=your-sentry-org
# SENTRY_PROJECT=your-sentry-project

# Feature Flags
ENABLE_CART_ANALYTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_DEBUG_LOGGING=false

# Cache Settings
ENABLE_CACHE=true
CACHE_TTL=300

# Security
SESSION_SECRET=your-session-secret-key-here

# Preview/Staging specific
# PREVIEW_MODE=false
# STAGING_PASSWORD=your-staging-password
